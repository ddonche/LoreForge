<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ScrollView
        android:id="@+id/container_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#424242">

        <GridLayout
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
            android:background="@color/background_floating_material_dark"
            android:id="@+id/gridLayout"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:clickable="true">
            android:columnCount="2">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/charinfo_instructions"
                android:id="@+id/instructionsCharInfoView"
                android:textSize="18sp"
                android:layout_marginBottom="100sp"
                android:textColor="@android:color/white"
                android:typeface="serif"
                android:layout_columnSpan="2"
                android:layout_column="0"
                android:layout_row="3"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/fake_divider"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_row="7"
                android:elevation="@dimen/elevation_shadow"
                android:layout_marginBottom="16sp"
                android:background="@color/primary_dark_material_dark" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/generate_medOccs"
                android:id="@+id/medOccButton"
                android:background="@android:color/black"
                android:textColor="@color/background_floating_material_light"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:onClick="launchClick"
                android:layout_row="8"
                android:elevation="@dimen/elevation_shadow"
                android:layout_marginBottom="16sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/generate_realOccs"
                android:background="@android:color/black"
                android:textColor="@color/background_floating_material_light"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:onClick="launchClick"
                android:layout_row="9"
                android:elevation="@dimen/elevation_shadow"
                android:layout_marginBottom="16sp"
                android:id="@+id/realOccButton" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/generate_traits"
                android:background="@android:color/black"
                android:textColor="@color/background_floating_material_light"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:onClick="launchClick"
                android:layout_row="10"
                android:elevation="@dimen/elevation_shadow"
                android:layout_marginBottom="16sp"
                android:id="@+id/traitsButton" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/adView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_row="11">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/shareButton"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="120dp"
                    android:src="@drawable/ic_share_black_24dp"
                    android:fillColor="@android:color/white"
                    android:layout_column="1"
                    android:layout_columnSpan="1"
                    android:layout_row="10"
                    android:layout_gravity="center_horizontal"
                    android:clickable="true"
                    android:background="@color/background_floating_material_dark"
                    android:layout_weight="1" />
            </LinearLayout>

        </GridLayout>
    </ScrollView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_charinfo">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>