<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#424242">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:scrollbars="horizontal">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
            android:background="#424242">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_instructions"
                android:id="@+id/placesLabelView"
                android:textSize="12sp"
                android:layout_marginBottom="9sp"
                android:textColor="@android:color/white"
                android:typeface="serif"
                android:layout_columnSpan="2"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="9sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/row1LinearLayout">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/main_city_button_label"
                    android:id="@+id/showCityButton"
                    android:drawableLeft="@drawable/cities"
                    android:background="@android:color/black"
                    android:textColor="#fff"
                    android:onClick="launchClick"
                    android:elevation="@dimen/elevation_shadow"
                    android:layout_marginBottom="16sp"
                    android:layout_weight="1"
                    android:lines="2"
                    style="@android:style/ButtonBar"
                    android:layout_margin="9dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/generate_street_name"
                    android:id="@+id/showStreetButton"
                    android:drawableLeft="@drawable/streetsigns"
                    android:background="@android:color/black"
                    android:textColor="#fff"
                    android:onClick="launchClick"
                    android:elevation="@dimen/elevation_shadow"
                    android:layout_marginBottom="16sp"
                    android:layout_weight="1"
                    android:lines="2"
                    style="@android:style/ButtonBar"
                    android:layout_margin="9dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/row2LinearLayout" >

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/generate_names"
                    android:id="@+id/charNamesButton"
                    android:drawableLeft="@drawable/crown"
                    android:background="@android:color/black"
                    android:textColor="#fff"
                    android:onClick="goCharAct"
                    android:elevation="@dimen/elevation_shadow"
                    android:layout_marginBottom="16sp"
                    android:layout_weight="1"
                    android:lines="2"
                    style="@android:style/ButtonBar"
                    android:layout_margin="9dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/pubsButton"
                    android:id="@+id/pubsButton"
                    android:drawableLeft="@drawable/beer"
                    android:background="@android:color/black"
                    android:textColor="#fff"
                    android:onClick="launchClick"
                    android:elevation="@dimen/elevation_shadow"
                    android:layout_marginBottom="16sp"
                    android:layout_weight="1"
                    android:lines="2"
                    style="@android:style/ButtonBar"
                    android:layout_margin="9dp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/characters_label"
                android:id="@+id/textView"
                android:textSize="12sp"
                android:layout_marginBottom="9sp"
                android:textColor="@android:color/white"
                android:typeface="serif"
                android:layout_columnSpan="2"
                android:layout_column="0"
                android:layout_row="5"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="9sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/row3LinearLayout">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/generate_plots"
                    android:id="@+id/plotsButton"
                    android:drawableLeft="@drawable/ic_map_black_24dp"
                    android:background="@android:color/black"
                    android:textColor="#fff"
                    android:onClick="launchClick"
                    android:elevation="@dimen/elevation_shadow"
                    android:layout_marginBottom="16sp"
                    android:layout_weight="1"
                    android:lines="2"
                    style="@android:style/ButtonBar"
                    android:layout_margin="9dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/generate_motive"
                    android:id="@+id/motiveButton"
                    android:drawableLeft="@drawable/motivation"
                    android:background="@android:color/black"
                    android:textColor="#fff"
                    android:onClick="launchClick"
                    android:elevation="@dimen/elevation_shadow"
                    android:layout_marginBottom="16sp"
                    android:layout_weight="1"
                    android:lines="2"
                    style="@android:style/ButtonBar"
                    android:layout_margin="9dp" />

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/row4LinearLayout" >

                <Button
                    style="@android:style/ButtonBar"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/black"
                    android:textColor="#fff"
                    android:onClick="launchClick"
                    android:elevation="@dimen/elevation_shadow"
                    android:layout_marginBottom="16sp"
                    android:layout_weight="1"
                    android:lines="2"
                    android:layout_margin="9dp"
                    android:id="@+id/detailsButton"
                    android:drawableLeft="@drawable/ic_assignment_black_24dp"
                    android:text="@string/details_button_text" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/generate_conflict"
                    android:id="@+id/conflictButton"
                    android:drawableLeft="@drawable/fire"
                    android:background="@android:color/black"
                    android:textColor="#fff"
                    android:onClick="launchClick"
                    android:elevation="@dimen/elevation_shadow"
                    android:layout_marginBottom="40sp"
                    android:layout_weight="1"
                    android:lines="2"
                    style="@android:style/ButtonBar"
                    android:layout_margin="9dp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/external_resouces_label"
                android:id="@+id/externalResourcesLabel"
                android:textSize="12sp"
                android:layout_marginBottom="9sp"
                android:textColor="@android:color/white"
                android:typeface="serif"
                android:layout_columnSpan="2"
                android:layout_column="0"
                android:layout_row="5"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="9sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout" >

               <Button
                   style="@android:style/ButtonBar"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:text="@string/wiki_button"
                   android:id="@+id/wikiButton"
                   android:drawableLeft="@drawable/ic_code_black_24dp"
                   android:background="@android:color/black"
                   android:textColor="#fff"
                   android:onClick="launchClick"
                   android:elevation="@dimen/elevation_shadow"
                   android:layout_marginBottom="16sp"
                   android:layout_weight="1"
                   android:lines="2"
                   android:layout_margin="9dp" />

               <Button
                   style="@android:style/ButtonBar"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:id="@+id/quotesButton"
                   android:drawableLeft="@drawable/ic_format_quote_black_24dp"
                   android:background="@android:color/black"
                   android:textColor="#fff"
                   android:onClick="launchClick"
                   android:elevation="@dimen/elevation_shadow"
                   android:layout_marginBottom="16sp"
                   android:layout_weight="1"
                   android:lines="2"
                   android:layout_margin="9dp"
                   android:text="@string/generate_inspiration" />

           </LinearLayout>


           <LinearLayout
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="center_horizontal"
               android:layout_weight="1"
               android:gravity="center_horizontal"
               android:id="@+id/socialIconsLinearLayout"
               android:layout_marginTop="12dp"
               android:layout_marginBottom="120dp">

               <ImageButton
                   android:layout_width="fill_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/facebookButton"
                   android:layout_centerHorizontal="true"
                   android:src="@drawable/facebook"
                   android:fillColor="@android:color/white"
                   android:layout_column="1"
                   android:layout_columnSpan="1"
                   android:layout_gravity="center_horizontal"
                   android:clickable="true"
                   android:background="#424242"
                   android:contentDescription="link to facebook"
                   android:baselineAlignBottom="false"
                   android:layout_weight="1"/>

               <ImageButton
                   android:layout_width="fill_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/twitterButton"
                   android:layout_centerHorizontal="true"
                   android:src="@drawable/twitter"
                   android:fillColor="@android:color/white"
                   android:layout_column="1"
                   android:layout_columnSpan="1"
                   android:layout_gravity="center_horizontal"
                   android:clickable="true"
                   android:background="#424242"
                   android:contentDescription="link to twitter"
                   android:baselineAlignBottom="false"
                   android:layout_weight="1"/>
           </LinearLayout>


       </LinearLayout>
       </ScrollView>

   <com.google.android.gms.ads.AdView
       android:id="@+id/adView"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
       ads:adSize="BANNER"
       ads:adUnitId="@string/banner_ad_unit_id"
       android:layout_gravity="center_horizontal|bottom"
       android:layout_marginTop="42sp">
   </com.google.android.gms.ads.AdView>

   </RelativeLayout>