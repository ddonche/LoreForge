<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ScrollView
        android:id="@+id/container_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#424242">

        <GridLayout
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
            android:background="#424242"
            android:id="@+id/gridLayout"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:clickable="true">
            android:columnCount="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/motives_instructions"
                android:id="@+id/instructionsMotivesView"
                android:textSize="18sp"
                android:layout_marginBottom="100sp"
                android:textColor="@android:color/white"
                android:typeface="serif"
                android:layout_columnSpan="2"
                android:layout_column="0"
                android:layout_row="3"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/fake_divider"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_row="7"
                android:elevation="@dimen/elevation_shadow"
                android:layout_marginBottom="16sp"
                android:background="@color/primary_dark_material_dark" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/generate_motive"
                android:id="@+id/motiveButton"
                android:background="@android:color/black"
                android:textColor="@color/background_floating_material_light"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:onClick="launchClick"
                android:layout_row="8"
                android:elevation="@dimen/elevation_shadow"
                android:layout_marginBottom="16sp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/shareButton"
                android:layout_above="@+id/adView"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="120dp"
                android:src="@drawable/ic_share_black_24dp"
                android:fillColor="@android:color/white"
                android:layout_column="1"
                android:layout_columnSpan="1"
                android:layout_row="9"
                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:background="#424242" />

        </GridLayout>
    </ScrollView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_motives">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>